					preserveRatio="true" visible="true" GridPane.columnIndex="0"
					GridPane.rowIndex="2">
					<image>
						<Image url="/calendrier/resources/time.png" />
					</image>
				</ImageView>
				<Label fx:id="lblDate" GridPane.columnIndex="1"
					GridPane.rowIndex="2" GridPane.columnSpan="3" wrapText="true" />

				<ImageView fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true" GridPane.columnIndex="4"
