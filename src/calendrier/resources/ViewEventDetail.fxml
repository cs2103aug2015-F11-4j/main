				<ColumnConstraints percentWidth="25.0" halignment="CENTER" />
				<ColumnConstraints percentWidth="20.0" halignment="RIGHT" />
				<ColumnConstraints percentWidth="25.0" halignment="CENTER" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints percentHeight="14.0" />
				<RowConstraints percentHeight="14.0" />
				<RowConstraints percentHeight="24.0" />
				<RowConstraints percentHeight="24.0" />
				<RowConstraints percentHeight="24.0" />
			</rowConstraints>
			<children>
				<ImageView fx:id="imgType" fitHeight="50" fitWidth="50"
					pickOnBounds="true" preserveRatio="true" visible="true"
					GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2">
				</ImageView>

				<Label text="ID: " GridPane.columnIndex="1" GridPane.rowIndex="0"
					wrapText="true" GridPane.valignment="BOTTOM" GridPane.halignment="RIGHT" />
