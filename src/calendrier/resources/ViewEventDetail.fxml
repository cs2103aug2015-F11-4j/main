					 GridPane.rowIndex="4" wrapText="true" />
				<Label fx:id="lblSUBID" GridPane.columnIndex="5"
					GridPane.rowIndex="4" wrapText="true"/>
				<Label fx:id="lblSUBID1" GridPane.columnIndex="5"
					GridPane.rowIndex="4" wrapText="true" GridPane.valignment="BOTTOM"/>
				
