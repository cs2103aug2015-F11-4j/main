<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8.0.40"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<GridPane fx:id="gridPaneDetail" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" hgap="20" vgap="20" >
			<!-- <columnConstraints>
				<ColumnConstraints minWidth="5.0" percentWidth="20.0" />
