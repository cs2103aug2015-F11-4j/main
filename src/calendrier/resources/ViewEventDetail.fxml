				<ColumnConstraints minWidth="5.0" percentWidth="20.0" />
				<ColumnConstraints minWidth="5.0" percentWidth="20.0" />
				<ColumnConstraints minWidth="5.0" percentWidth="20.0" />
			</columnConstraints> -->
			<children>
				<ImageView fx:id="imgType" fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true"
					GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2" >
				</ImageView>
				<Label text="ID: " GridPane.columnIndex="1" GridPane.rowIndex="0" />
				<Label fx:id="lblID" GridPane.columnIndex="2" GridPane.rowIndex="0" />
				<Label fx:id="lblTitle" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2" />
				
				<Label text="Priority: " GridPane.columnIndex="3" GridPane.rowIndex="0" />
				<Label fx:id="lblPriority" GridPane.columnIndex="4" GridPane.rowIndex="0" />
				<Label text="Group :" GridPane.columnIndex="3" GridPane.rowIndex="1" />
				<Label fx:id="lblGroup" GridPane.columnIndex="4" GridPane.rowIndex="1" />
			
				<ImageView fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true"
					GridPane.columnIndex="0" GridPane.rowIndex="3">
					<image>
						<Image url="/calendrier/resources/date.png" />
					</image>
				</ImageView>
				<Label fx:id="lblStartDateTime" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2" />
			
				<ImageView fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true"
					GridPane.columnIndex="0" GridPane.rowIndex="4">
					<image>
						<Image url="/calendrier/resources/time.png" />
					</image>
				</ImageView>
				<Label fx:id="lblEndDateTime" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="2" />
				
				<ImageView fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true"
					GridPane.columnIndex="0" GridPane.rowIndex="5">
					<image>
						<Image url="/calendrier/resources/location.png" />
					</image>
				</ImageView>
				<Label fx:id="lblLocation" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="2" />
				
				<ImageView fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true"
					GridPane.columnIndex="0" GridPane.rowIndex="6">
					<image>
						<Image url="/calendrier/resources/reminder.png" />
					</image>
				</ImageView>
				<Label fx:id="lblReminder" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="2" />
				
				<ImageView fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true"
					GridPane.columnIndex="3" GridPane.rowIndex="3">
					<image>
						<Image url="/calendrier/resources/notes.png" />
					</image>
				</ImageView>
				<Label fx:id="lblNotes" GridPane.columnIndex="4" GridPane.rowIndex="3" />
			</children>
		</GridPane>
	</children>
</fx:root>