		<GridPane fx:id="gridPaneDetail" xmlns="http://javafx.com/javafx/8.0.40"
			xmlns:fx="http://javafx.com/fxml/1" prefWidth="800.0" prefHeight="650.0"
			maxWidth="800.0" maxHeight="650.0" vgap="10" hgap="10">
