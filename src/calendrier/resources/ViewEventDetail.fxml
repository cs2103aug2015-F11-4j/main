						<Image url="/calendrier/resources/recurrence.png" />
					</image>
				</ImageView>
				<Label fx:id="lblRecurrence" GridPane.columnIndex="5"
					GridPane.rowIndex="2" wrapText="true" />

				<ImageView fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true" GridPane.columnIndex="0"
					GridPane.rowIndex="3">
					<image>
						<Image url="/calendrier/resources/location.png" />
					</image>
				</ImageView>
				<Label fx:id="lblLocation" GridPane.columnIndex="1"
					GridPane.rowIndex="3" GridPane.columnSpan="3" wrapText="true" />

				<ImageView fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true" GridPane.columnIndex="4"
					GridPane.rowIndex="3">
					<image>
						<Image url="/calendrier/resources/notes.png" />
					</image>
				</ImageView>
				<Label fx:id="lblNotes" GridPane.columnIndex="5"
					GridPane.rowIndex="3" wrapText="true" />

				<ImageView fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true" GridPane.columnIndex="0"
					GridPane.rowIndex="4">
