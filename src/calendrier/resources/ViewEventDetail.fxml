				</ImageView>
				<Label fx:id="lblPriority" GridPane.columnIndex="5"
					GridPane.rowIndex="0" wrapText="true" />

				<Label fx:id="lblTitle" GridPane.columnIndex="1" underline="true"
					GridPane.rowIndex="1" GridPane.columnSpan="2" wrapText="true"
					GridPane.valignment="TOP" />

				<ImageView fitHeight="50" fitWidth="50" pickOnBounds="true"
					preserveRatio="true" visible="true" GridPane.columnIndex="4"
